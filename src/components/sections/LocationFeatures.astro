---
interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-8">
  {features.map((feature) => (
    <div class="card p-6 hover:scale-105 transition-transform duration-300 animate-fade-in">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4">
          <i class={`${feature.icon} text-primary text-xl`}></i>
        </div>
        <h3 class="font-bold text-xl">{feature.title}</h3>
      </div>
      <p class="text-gray-600">{feature.description}</p>
    </div>
  ))}
</div>