<section class="bg-primary/10 section-padding">
  <div class="container-custom">
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="text-3xl font-bold mb-4">¡Mantente informado!</h2>
      <p class="text-gray-600 mb-6">
        Suscríbete a nuestro boletín para recibir noticias, promociones y eventos de Urban Monkey.
      </p>
      
      <form class="flex flex-col sm:flex-row gap-2 max-w-md mx-auto">
        <input 
          type="email" 
          placeholder="Tu correo electrónico" 
          class="flex-1 px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary"
          required
        />
        <button 
          type="submit" 
          class="bg-[#118c30] btn whitespace-nowrap"
        >
          Suscribirme
        </button>
      </form>
    </div>
  </div>
</section>

<script>
  // Simple form handler
  const newsletterForm = document.querySelector('form');
  
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('¡Gracias por suscribirte! En una implementación real, te enviaríamos un correo de confirmación.');
    (e.target as HTMLFormElement).reset();
  });
</script>