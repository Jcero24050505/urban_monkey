---
interface Props {
  location: 'madrid' | 'villalba';
}

const { location } = Astro.props;

const mapSrc = location === 'madrid'
  ? 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3038.5184138091145!2d-3.697401684616127!3d40.398279979365486!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd422630caa1c7c7%3A0x78de4fa1348b0ae!2sUrban%20Monkey%20Madrid!5e0!3m2!1sen!2ses!4v1649951234567!5m2!1sen!2ses'
  : 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3033.0638830576306!2d-4.025753284612108!3d40.52963167935005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd4176a6e5a0a6cb%3A0x408db1a7953248cc!2sUrban%20Monkey%20Villalba!5e0!3m2!1sen!2ses!4v1649951234567!5m2!1sen!2ses';

const title = location === 'madrid' 
  ? 'Ubicación Urban Monkey Madrid' 
  : 'Ubicación Urban Monkey Villalba';
---

<div class="w-full h-[400px] rounded-lg overflow-hidden shadow-md">
  <iframe 
    src={mapSrc} 
    width="100%" 
    height="400" 
    style="border:0;" 
    allowfullscreen="" 
    loading="lazy" 
    referrerpolicy="no-referrer-when-downgrade"
    title={title}
  ></iframe>
</div>